<%- include('partials/header.ejs') %>
    <div class="container">
        <div class="row g-4">
            <% posts.forEach(post=> { %>
            <div class="col-lg-3">
                <div class="card shadow">
                    <img src="/uploads/<%= post.image %>" class="card-img-top" alt="<%= post.title %>" height="200">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold text-secondary">
                            <i class="fa-brands fa-stack-overflow"></i> <%= post.title %>
                        </h5>
                        <p class="card-text">
                            <%= post.content.substring(0, 80) %>...
                        </p>
                        <div>
                            <a href="/post/<%= post.slug %>" class="btn btn-primary btn-sm">
                                Read <i class="fa-solid fa-forward"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center fs-6">
                            <div>
                                <i class="fa-solid fa-code"></i> <%= post.user.name %>
                            </div>
                            <div>
                                <i class="fa-solid fa-calendar-days"></i> <%= post.createdAt.toLocaleDateString() %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <div class="my-4 float-end d-inline-flex align-items-center gap-4">
            <% if (pagination.hasPrevPage) {%>
                <div>
                    <a href="/?page=<%= pagination.prevPage %>" class="btn btn-secondary btn-sm">Previous</a>
                </div>
            <%} %>

            <span>Page <%= pagination.currentPage %> of <%= pagination.totalPage %></span>

            <% if (pagination.hasNextPage) {%>
                <div>
                    <a href="/?page=<%= pagination.nextPage %>" class="btn btn-secondary btn-sm">Next</a>
                </div>
            <%} %>
        </div>
    </div
<%- include('partials/footer.ejs') %>