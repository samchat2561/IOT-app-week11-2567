<%- include('partials/header.ejs') %>
    <div class="container">
        <div class="row g-4">
            <% posts.forEach(post=> { %>
            <div class="col-lg-6">
                <div class="card shadow">
                    <img src="/uploads/<%= post.image %>" class="img-fluid card-img-top" alt="<%= post.title %>">
                    <div class="card-body p-4">
                        <h2 class="card-title fw-bold text-secondary"><%= post.title %></h2>
                        <p class="card-text">
                            <%= post.content.substring(0, 200) %>...
                        </p>
                        <div>
                            <a href="/post/<%= post.slug %>" class="btn btn-primary">Read More</a>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>Author: <%= post.user.name %></div>
                            <div>Created: <%= post.createdAt.toLocaleString() %></div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        
    </div>
<%- include('partials/footer.ejs') %>